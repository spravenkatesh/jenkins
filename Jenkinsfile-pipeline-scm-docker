pipeline {
    agent {
        docker {
            image 'python:3.9.21-slim'
        }
    }
    stages {
        stage('check python version') {
            steps {
                sh 'python --version'
            }
        }
        stage('hello world') {
            steps {
                sh 'chmod +x scripts/testing.py'
                sh 'scripts/testing.py'
            }
        }
    }
    post('cleanup') {
        always {
            echo 'cleaning-up workspace'
            cleanWs()
        }
    }
}
